{
  "name": "WorkWise SA Firebase Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/firebase-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "forwardPorts": [5000, 5001, 8080, 9099, 9199],
  "postCreateCommand": "npm install -g firebase-tools && cd functions && npm install",
  "postStartCommand": "firebase login",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": { "source.fixAll": "explicit" },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "ms-azuretools.vscode-docker",
        "toba.vsfire",
        "github.copilot",
        "github.copilot-chat",
        "ms-vscode.vscode-typescript-tslint-plugin",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
